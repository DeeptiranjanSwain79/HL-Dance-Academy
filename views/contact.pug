extends base.pug

block scripts 
    script(src='/static/index.js')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

    nav#navbar
        ul
            div#logo
                img(src="../static/logo.jpg", alt="", srcset="")
            li #[a(href="/") Home]
            li #[a(href="/about") About]
            li #[a(href="/services") Services]
            li #[a(href="/class") Class Info]
            li #[a(href="/contact", target='_blank') Contact Us]
        div.container
            h2 Contact Us
            form(action="/contact", method="post", class='form') 
                input(type="text", name="name", id ='myInput', placeholder='Enter your name')
                input(type="number", name="age", id ='myInput', placeholder='Enter your age')
                input(type="text", name="gender", id ='myInput', placeholder='Enter your gender')
                input(type="text", name="aadhaar", id ='myInput', placeholder='Enter your AADHAAR number')
                input(type="email", name="email", id ='myInput', placeholder='Enter your Email')
                input(type="text", name="phone", id ='myInput', placeholder='Enter your Phone Number')
                textarea(name="address", cols="17", rows="2", id ='myInput', placeholder='Enter your Address')
                button(type='submit', name='submit') Submit

    footer#footer 
        div.foot Copyright &copy; www.hldanceacademy.com | All rights reserved
    script
      include ../static/style.css